<%= form_for [@survey, @question], :html => { :class => 'form-horizontal question_form' } do |f| %>
<div class="control-group">
  <%= f.label :name, :class => 'control-label' %>
  <div class="controls">
    <%= f.text_field :name, :class => 'text_field' %>
  </div>
</div>

<div class="control-group">
  <%= f.label :custom_field_id, "Field Type", :class => 'control-label' %>
  <div class="controls">
    <%= f.select :custom_field_id, CustomField.all.collect {|p| [ p.name, p.id ] }, :class => 'select_field' %>
  </div>
</div>

<div class="control-group">
  <%= f.label :options, :class => 'control-label' %>
  <div class="controls">
    <%= f.text_area :options, :class => 'text_area' %>
  </div>
</div>

<div class="form-actions">
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to "Cancel",surveys_path, :class => 'btn' %>
</div>
<% end %>
