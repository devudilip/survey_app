<div class="page-header">
  <h1> Survey Results</h1>
  (Click on answers to navigate to user survey responses)
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th> Survey Name </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @questions.each do |question| %>
    <tr>
      <td><%= question.name %></td>
      <td>
        <div class="survey-box"> 
          <% question.answers.each do |answer| %>
          <%= link_to answer.answers.join(' '), user_survey_survey_path(@survey,user_id: answer.user_id) %> 
          <br />
          <% end %>
        </div>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Back To Surveys",surveys_path,:class => 'btn btn-primary' %>