<div class="page-header">
  <h1><%= @survey.name %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th> Question Name </th>
      <th> Type </th>
    </tr>
  </thead>
  <tbody>
    <% @survey.questions.all.each do |question| %>
    <tr>
      <td><%= question.name %></td>
      <td><%=  question.custom_field.name  %></td>
      <td>
        <% if can? :manage, question %>
        <%= link_to "edit", edit_survey_question_path(@survey, question), :class => 'btn btn-mini' %>
        <%= link_to "Delete", survey_question_path(@survey, question), :method => :delete,:confirm =>  'Are you sure?',
        :class => 'btn btn-mini btn-danger' %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<% if can? :manage, Survey %>
<%= link_to "Back", surveys_path, :class => 'btn btn-primary'  %>
<%= link_to "Create New Question", new_survey_question_path(@survey), :class => 'btn btn-primary' %>
<% end %>