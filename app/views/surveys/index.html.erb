<div class="page-header">
  <h1> Survey </h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th> Survey Name </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @surveys.each do |survey| %>
    <tr>
      <td><%= survey.name %></td>
      <td>
      <%= link_to "Survey Results", survey_questions_path(survey), :class => 'btn btn-mini' %>
        <%= link_to "Manage Survey", new_survey_question_path(survey), :class => 'btn btn-mini' %>
        <%= link_to "edit", edit_survey_path(survey), :class => 'btn btn-mini' %>
        <%= link_to "Delete", survey, :method => :delete,:confirm =>  'Are you sure?',
        :class => 'btn btn-mini btn-danger' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New Survey",new_survey_path,:class => 'btn btn-primary' %>
